.customer {
    min-height: 100vh;
    background: #EFFAFF;
    width: 100%;

    .bossText-enter {
        opacity: 0;
    }

    .bossText-enter-active {
        opacity: 1;
        transition: opacity 0.5s;
    }

    .bossText-enter-done {
        opacity: 1;
    }

    .bossText-exit {
        opacity: 1;
    }

    .bossText-exit-active {
        opacity: 0;
        transition: opacity 0.5s;
    }

    .bossText-exit-done {
        opacity: 0;
    }

    .content {
        position: absolute;
        left: 0;
        top: 76px;
        width: 100%;
        bottom:0;
        right:0;
        background: #EFFAFF;

        .title {
            width: 156px;
            height: 66px;
            background: rgba(150, 223, 255, 0.2);
            border-radius: 6px;

            img {
                width: 40px;
                height: 40px;
            }
        }

        .hot-title {
            height: 22px;

            img {
                width: 20px;
                height: 20px;
            }
        }
        .scroll-content{
            padding-bottom: 85px;
        }
        .scroll-wrapper{
            margin-bottom: 15px;
            overflow-y auto
        }
        .question-list {
            a {
                height: 36px;
                background: rgba(150, 223, 255, 0.2);
                border-radius: 4px;
            }
        }

      

        .contect-service {
            width: 100%
            height:46px;
            position: fixed;
            left 0
            bottom 15px
            button {
                width: 230px;
                height: 46px;
                border-radius: 24px;
                color: #fff;
                background-image: linear-gradient(180deg, #FF7A52 1%, #FF420E 100%);
                box-shadow: 0 2px 0 0 #D52E00;
            }

            img {
                width: 30px;
                height: 30px;
            }
        }
    }
}
