.customer {
    min-height 100vh 
    background #EFFAFF
    width 100% 
    .bossText-enter{
        opacity: 0
    }
    .bossText-enter-active{
        opacity 1
        transition opacity 0.5s
    }
    .bossText-enter-done{
        opacity 1
    }
    .bossText-exit{
        opacity 1
    }
    .bossText-exit-active{
        opacity 0
        transition opacity 0.5s
    }
    .bossText-exit-done{
        opacity 0
    }
    .content {
        position absolute 
        left 0 
        top 76px
        width 100% 
        background: #EFFAFF;
        .title {
            width 156px
            height 66px
            background: rgba(150,223,255,0.20);
            border-radius 6px
            img{
                width 40px
                height 40px
            }
        }
        .hot-title{
            height 22px
            img{
                width 20px
                height 20px
            }
        }
        .question-list{
            a{
                height 36px
                background rgba(150,223,255,0.20)
                border-radius: 4px
            }
        }
        .contect-service{
            width 230px
            height 46px
            position fixed
            bottom 14px
            left 50%
            transform translateX(-50%)
            background-image: linear-gradient(180deg, #FF7A52 1%, #FF420E 100%);
            box-shadow: 0 2px 0 0 #D52E00;
            border-radius: 24px;
            border-radius: 24px;
            color #fff
            img{
                width: 30px
                height 30px
            }
            
        }
    }
}
